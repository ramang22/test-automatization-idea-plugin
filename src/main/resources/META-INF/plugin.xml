<idea-plugin>
    <id>org.rezane.IntelliJ-IDEA-test-run-plugin</id>
    <name>100% testup time</name>
    <version>1.0-SNAPSHOT</version>
    <vendor email="wibrach@gmail.com" url="github.com/rezane">Rezane studio</vendor>

    <description><![CDATA[
    Plugin for minimizing running unit tests
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>


    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <postStartupActivity implementation="pluginCommunicationHandler.StartUpActivity"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="highlighter.CustomLineMarker"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="mainScreen" text="Tester Plugin" description="Main window of plugin" >
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action class="pluginCommunicationHandler.RunTestButton" id="runtest" text="Run Test" icon="/META-INF/logo24x24.png"/>
            <action class="pluginCommunicationHandler.SelectTestsFolderButton" id="selectTestFolder" text="Select tests folder"/>
            <action class="pluginCommunicationHandler.PluginSettings" id="pluginSettings" text="Settings"/>
        </group>


    </actions>
</idea-plugin>